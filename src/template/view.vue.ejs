<% var listName=tableNameCamelBak+"List" %>
<template>
  <section>
    <table-template
      :data="<%=listName%>"
      :config="config"
      :tableLoading="tableLoading"
      @submitAdd="submitAdd"
      @submitEdit="submitUpdate"
      @submitSearch="handleSearch"
      @pageChange="listPage"
      :page='params'>
    </table-template>
  </section>
</template>

<script>
  import {listPage, updObj, addObj, delObj} from '@/api<%= basePath %>'

  export default {
    data() {
      return {
        tableLoading: false,
        <%=listName%>: [],
        config: {
          columns: [<% columns.forEach(column=>{ %>
            {
              label: '<%= column.columnComment %>',
              field: '<%= column.property %>',
            },<% }) %>
          ],
          handlerList: [
            {
              label: '编辑',
              icon: 'el-icon-edit'
            },
            {
              label: '删除',
              icon: 'el-icon-delete',
              click: row => {
                this.handleDelete(row);
              }
            }
          ],
          rules: {
            username: [
              {required: true, message: '请输入登录账号', trigger: 'blur'}
            ],
          },
        },
        params: {
          current: 1,
          size: 10,
          total: 10
        }
      }
    },
    methods: {
      listPage() {
        this.tableLoading = true;
        listPage(this.params).then(res => {
          this.<%=listName%> = res.data.records;
          this.params.total = res.data.total;
          this.tableLoading = false;
        }).catch(() => this.tableLoading = false);
      },
      handleDelete(row) {
        this.confirm(`确定删除吗?`).then(() => {
          delObj([row.id]).then(() => {
            this.$message({
              type: 'success',
              message: '删除成功!'
            });
            this.listPage();
          });
        });
      },
      handleSearch(params) {
        this.params.current = 1;
        this.params = {...this.params, ...params};
        this.listPage();
      },
      submitAdd(row, hideLoading, done) {
        addObj(row).then((res) => {
          this.$message({
            type: 'success',
            message: `新增成功!`
          });
          this.listPage();
          done();
        }).catch(() => hideLoading());
      },
      submitUpdate(row, hideLoading, done) {
        updObj(row).then(() => {
          this.$message({
            type: 'success',
            message: '更新成功!'
          });
          this.listPage();
          done();
        }).catch(() => hideLoading());
      },
    },
    computed: {},
    mounted() {
      this.listPage();
    }
  }
</script>

